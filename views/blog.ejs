<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Home</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="container mt-4 ">
        <div class="container mt-3">
            <h1><%= blog.title %></h1>
        </div>
        <div class="container mt-3">
            <img src="<%= blog.coverImage %>" width="700vw">
        </div>
        <div class="container mt-3">
            <pre><%= blog.body %></pre>
        </div>
    </div>
    <div class="container mt-4 ">
        <div class="container mt-3">
            <img src="<%= blog.createdBy.profileImageURL %>" width="70vw">  <%= blog.createdBy.fullName %>
        </div>
    </div>
    <div class="container">
        <% if (locals.user) { %>
            <div class="container mt-4 ">
                <h1>Comments:(<%= comments.length %>)</h1>
                <div class="container mt-3">
                    <form action="/blog/comment/<%= blog._id %>", method="post">
                        <textarea name="comment"></textarea>
                        <button type="submit" class="btn btn-sm btn-primary">Add</button>
                    </form>
                </div>
            </div>
        
            <div class="container mt-4 ">
                <div class="container mt-3">
                    <% comments.forEach(comment => { %>
                    <img src="<%= comment.commentedBy.profileImageURL %>" width="70vw">  <%= comment.commentedBy.fullName %>
                    <p><%= comment.content %></p>
                    <% }) %>
                </div>
            </div>
        <% } %>
    </div>

    <%- include('./partials/scripts.ejs') %>
</body>
</html>